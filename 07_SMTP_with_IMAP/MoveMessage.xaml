<Window x:Class="Self_Task_SMTP_IMAP.MoveMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Self_Task_SMTP_IMAP"
        mc:Ignorable="d"
        Title="MoveMessage" Height="300" Width="200">
    <StackPanel>
        <TextBlock DockPanel.Dock="Top" Margin="5" VerticalAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Center">Select a folder to move the message to:</TextBlock>
        <ComboBox Name="cbFolders" Margin="5" Height="50" DockPanel.Dock="Top"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Name="btnMove" Margin="5" Padding="10,5" Click="MoveBtn">Move</Button>
            <Button Name="btnCancel" Margin="5" Padding="10,5" Click="CancelBtn">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
